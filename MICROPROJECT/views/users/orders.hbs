<div class="page-content-wrapper py-3">

    {{#if orders}}
    <!-- Top Products-->
    <div class="top-products-area product-list-wrap">
        <div class="container">
            <div class="pb-2">
                <div class="card">
                    <div class="card-body p-2">
                        <a href="/home" class="btn btn-info">Back to home</a>
                    </div>
                </div>
            </div>
            <div class="row g-3">
                <!-- Single Top Product Card-->
                {{#each orders}}
                <div class="col-12">
                    <div class="card single-product-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="card-side-img">
                                    <!-- Product Thumbnail--><a class="product-thumbnail d-block"
                                        href="page-shop-details.html"><img src="img/man.png"
                                            style="margin-right: -76px;" alt="">
                                    </a>
                                </div>
                                <div class="card-content px-4 py-2">
                                    <!-- Product Title--><a class="product-title d-block text-truncate mt-0"
                                        href="">{{this.orderObject.deliveryDetails.name}}</a>
                                    <!-- Product Price-->
                                    <p class="text-primary" style="margin-bottom: 3px;">Price :
                                        <b> {{this.orderObject.totalAmount}}</b>
                                    </p>
                                    <p class="text-primary">Date : <b>{{this.orderObject.date}}</b></p>

                                    <a class="btn btn-dark btn-sm" href="/view-ordered-products/{{this._id}}">View
                                        Bill</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{else}}
    <div class="container mt-5">
        <div class="pb-2">
            <div class="card">
                <div class="card-body p-2">
                    <a href="/home" class="btn btn-info">Back to home</a>
                </div>
            </div>
        </div>
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">There is no reports!</h4>
            <hr>
            <p class="mb-0">You need to create a bill first.</p>
        </div>
        <div class="">
            <center>
                <a href="/bill" class="btn btn-primary w-50 text-center">Create bill</a>
            </center>
        </div>
    </div>
    {{/if}}
</div>